<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MessagesActivity">

    <ImageView
            android:layout_width="142dp"
            android:layout_height="243dp" app:srcCompat="@drawable/img1"
            android:id="@+id/image" android:scaleType="centerCrop" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp" android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Durée : 11s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="24sp" android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/textView2"/>
    <TextView
            android:text="Message 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toEndOf="@+id/image"
            android:layout_marginLeft="56dp" android:layout_marginStart="56dp"
            app:layout_constraintTop_toTopOf="@+id/image"
            android:textSize="36sp" android:fontFamily="sans-serif-medium" android:layout_marginTop="8dp"/>
    <Button
            android:text="Replay"
            android:layout_width="421dp"
            android:layout_height="69dp"
            android:id="@+id/playMessageButton1"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="@+id/textView"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/image" android:layout_marginBottom="10dp"
            app:layout_constraintVertical_bias="0.074" android:textSize="24sp"/>
    <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:id="@+id/separator"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/image"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:layout_width="142dp"
            android:layout_height="243dp" app:srcCompat="@drawable/img2"
            android:id="@+id/image2" android:scaleType="centerCrop" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp"
            android:layout_marginTop="310dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Durée : 20s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="24sp" android:fontFamily="sans-serif"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/textView4"/>
    <TextView
            android:text="Message 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toEndOf="@+id/image2"
            android:layout_marginLeft="56dp" android:layout_marginStart="56dp"
            app:layout_constraintTop_toTopOf="@+id/image2"
            android:textSize="36sp" android:fontFamily="sans-serif-medium" android:layout_marginTop="8dp"/>
    <Button
            android:text="Replay"
            android:layout_width="421dp"
            android:layout_height="69dp"
            android:id="@+id/playMessageButton2"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/textView3"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/image2" android:layout_marginBottom="10dp"
            app:layout_constraintVertical_bias="0.074" android:textSize="24sp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/separator2"
            android:background="@android:color/darker_gray"
            tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toBottomOf="@+id/image2"
            android:layout_marginTop="20dp"/>

    <VideoView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/videoView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>